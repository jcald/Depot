<h1>Listing products</h1>

<table class="table table-striped">
<% @products.each do |product| %>
	<tr>
		<td>
			<%= image_tag(product.image_url, class: 'list_image') %> 
		</td>
		<td class="list_description"> 
			<dl>
				<dt><%= product.title %></dt>
				<dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
			</dl>
		</td>
		<td class="list_actions">
			<%= link_to 'Show', product, class: 'btn btn-mini' %><br/>
			<%= link_to 'Edit', edit_product_path(product), class: 'btn btn-mini' %><br/> 
			<%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini' %>
		</td> 
	</tr>
<% end %> 
</table>
<br />
<%= link_to 'New product', new_product_path, class: 'btn' %>