<div class="depot_form">
	<% if flash[:alert] %>
	<div class="alert alert-block alert-error">
		<a class"close" data-dissmis="alert">Ã—</a>
		<strong>Error! </strong><%= flash[:alert]%>
	</div>
	<% end %>
	
	<%= form_tag({}, {class: "form-background"}) do %>
		<fieldset>
			<legend>Please Log In</legend>

			<%= label_tag :name, 'Name:'%>
			<%= text_field_tag :name, params[:name], placeholder: "Put you username here please..." %>

			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password], placeholder: "You password here..." %>
			
			<%= submit_tag "Login", class: "btn" %>
			
		</fieldset>
	<% end %>
</div>