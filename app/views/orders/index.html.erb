<h1>Listing orders</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to 'Show', order, class: 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path, class: 'btn' %>

<p><%= will_paginate @orders %></p>